<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administración</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      /* Estilos personalizados */
      body {
        padding-top: 50px; /* Para dejar espacio para el navbar */
      }
      .container {
        margin-top: 20px; /* Agrega un margen superior */
      }
      table {
        margin-top: 20px; /* Agrega un margen superior a la tabla */
      }
      th,
      td {
        padding: 12px; /* Añade un relleno a las celdas */
      }
      th {
        background-color: #343a40 !important; /* Color de fondo para los encabezados */
        color: #fff !important; /* Color de texto para los encabezados */
      }
      tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2; /* Color de fondo para filas impares */
      }
      tbody tr:hover {
        background-color: #ddd; /* Color de fondo al pasar el cursor */
      }
      .btn-container {
        display: flex;
        justify-content: center;
        gap: 10px; /* Espacio entre los botones */
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <!-- Añadimos la clase fixed-top para que el navbar permanezca en la parte superior -->
      <div class="container-fluid">
        <a class="navbar-brand">Administración Titulación</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/citas/administrarCitas">Administrar Citas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/administrarUsuarios">Administrar Usuarios</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/egresados/agregar">Agregar Egresados</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/personal/agregar">Agregar Personal</a>
            </li>
          </ul>
        </div>
        <div class="d-flex">
          <a class="btn btn-outline-danger me-2" href="/citas/login">Cerrar Sesión</a>
        </div>
      </div>
    </nav>

    <div class="container">
      <h1 class="text-center">Listado de Citas</h1>

      <table class="table table-borderless text-center">
        <!-- Aplicamos la clase table-borderless para quitar los bordes -->
        <thead style="background-color: #343a40; color: #fff">
          <tr>
            <th>Matrícula</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% citas.forEach(cita => { %>
          <tr>
            <td><%= cita.egresadoMatricula %></td>
            <td><%= cita.fecha %></td>
            <td><%= cita.hora %></td>
            <td>
              <!-- Botones de editar y eliminar en dos columnas -->
              <div class="btn-container">
                <form action="/citas/<%= cita.id %>/editar" method="GET">
                  <button type="submit" class="btn btn-primary">Editar</button>
                </form>
                <form action="/citas/<%= cita.id %>/eliminar" method="POST">
                  <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Bootstrap JS y sus dependencias (jQuery y Popper.js) para el funcionamiento de algunos componentes -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
  </body>
</html>
