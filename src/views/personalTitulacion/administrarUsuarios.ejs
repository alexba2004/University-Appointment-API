<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administración</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      /* Estilos personalizados */
      body {
        padding-top: 50px; /* Para dejar espacio para el navbar */
      }
      .container {
        margin-top: 20px; /* Agrega un margen superior */
      }
      table {
        margin-top: 20px; /* Agrega un margen superior a la tabla */
      }
      th,
      td {
        padding: 12px; /* Añade un relleno a las celdas */
        vertical-align: middle; /* Centra verticalmente el texto */
      }
      th {
        background-color: #343a40 !important; /* Color de fondo para los encabezados */
        color: #fff !important; /* Color de texto para los encabezados */
      }
      tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2; /* Color de fondo para filas impares */
      }
      tbody tr:hover {
        background-color: #ddd; /* Color de fondo al pasar el cursor */
      }
      .btn-container {
        display: flex;
        justify-content: center;
        gap: 10px; /* Espacio entre los botones */
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <!-- Añadimos la clase fixed-top para que el navbar permanezca en la parte superior -->
      <div class="container-fluid">
        <a class="navbar-brand">Administración Titulación</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/citas/administrarCitas">Administrar Citas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/administrarUsuarios">Administrar Usuarios</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/egresados/agregar">Agregar Egresados</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/personal/agregar">Agregar Personal</a>
            </li>
          </ul>
        </div>
        <div class="d-flex">
          <a class="btn btn-outline-danger me-2" href="/citas/login">Cerrar Sesión</a>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col">
          <div class="table-container">
            <h2 class="text-center">Listado de Egresados</h2>
            <table class="table table-striped table-hover">
              <thead style="background-color: #6c757d; color: #fff">
                <tr class="text-center">
                  <th scope="col">Matrícula</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Nivel de Titulación</th>
                  <th scope="col">Generación</th>
                  <th scope="col">Carrera de Titulación</th>
                  <th scope="col">CURP</th>
                  <th scope="col">Correo</th>
                  <th scope="col">Teléfono</th>
                  <th scope="col">Acciones</th>
                </tr>
              </thead>
              <tbody class="text-center">
                <% egresados.forEach(egresado => { %>
                <tr>
                  <td><%= egresado.matricula %></td>
                  <td><%= egresado.nombre %></td>
                  <td><%= egresado.nivelTitulacion %></td>
                  <td><%= egresado.generacion %></td>
                  <td><%= egresado.carreraTitulacion %></td>
                  <td><%= egresado.curp %></td>
                  <td><%= egresado.correo %></td>
                  <td><%= egresado.telefono %></td>
                  <td class="text-center">
                    <!-- Botones de editar y eliminar -->
                    <div class="d-flex justify-content-center">
                      <form action="/citas/egresados/<%= egresado.matricula %>/editar" method="GET">
                        <button type="submit" class="btn btn-primary me-2">Editar</button>
                      </form>
                      <form action="/citas/egresados/<%= egresado.matricula %>/eliminar" method="POST">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col">
          <div class="table-container">
            <h2 class="text-center">Listado de Personal</h2>
            <table class="table table-striped table-hover">
              <thead style="background-color: #6c757d; color: #fff">
                <tr class="text-center">
                  <th scope="col">Número de Trabajador</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Acciones</th>
                </tr>
              </thead>
              <tbody class="text-center">
                <% personal.forEach(persona => { %>
                <tr>
                  <td><%= persona.numeroTrabajador %></td>
                  <td><%= persona.nombre %></td>
                  <td class="text-center">
                    <!-- Botones de editar y eliminar -->
                    <div class="d-flex justify-content-center">
                      <form action="/citas/personal/<%= persona.numeroTrabajador %>/editar" method="GET">
                        <button type="submit" class="btn btn-primary me-2">Editar</button>
                      </form>
                      <form action="/citas/personal/<%= persona.numeroTrabajador %>/eliminar" method="POST">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
